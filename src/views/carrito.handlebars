      <body>
  <header class="container-fluid bg-dark position-sticky top-0">
    <div class="navbar-nav">
      <div class="header2">
        <div class="title">
          <img class="avatar" src="https://i.postimg.cc/65D2wVCC/imagen.png" alt="">
        <h1>FUNKOPOPS</h1>
        <a href="/" class="btn btn-primary cart">Inicio</a>
        <button type="submit" class="btn btn-success button cart productall"><a class="page-link" href="/api/products_index">Todos los Productos</a></button>
        </div>     
        <div class="navbartotal">
        <div >
          <h4 class="card-title pt-2 text-center text-primary">Bienvenido:({{name}})</h4>
        </div>
        <div>
          <h4 class="card-title pt-2 text-center text-success">Rol:({{rol}})</h4>         
        </div>
        <div class="btn-group">
      <img src={{avatar}} class="btn dropdown-toggle avatar" data-bs-toggle="dropdown" aria-expanded="false" />
  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="/updateavatar">Cambiar Avatar</a></li>
    <li><a class="dropdown-item" href="/updatepass">Cambiar Contraseña</a></li>    
    <li><hr class="dropdown-divider"></li>
    <li><a href="{{baseUrl}}/logout" class="dropdown-item"><i class="fas fa-sign-out-alt"></i>Cerrar Sesión</a></li>    
  </ul>
    </div>
        </div>    
  </header>
      
      <div
        class="carrito"                    
      >
        <table class="table table-dark table-hover">
          <thead>
            <tr class="text-primary">
              <th scope="col">#</th>
              <th scope="col">Productos</th>
              <th scope="col">Precio</th>
              <th scope="col">Cantidad</th>
              <th scope="col">Eliminar</th>
            </tr>
          </thead>                      
          {{#each products}}                     
          <tbody class="tbody">
            <th scope="row" style="padding-top: 50px;">♠️ ♥️ ♦️ ♣️</th>
            <td class="table__productos">
              <img src={{prods.[0].thumbnail}} alt="">
              <h6 class="title2">{{prods.[0].title}}</h6>
            </td>
            <td><p id="price" class="table__precio">$ {{math prods.[0].price "*" quantity}}</p></td>
            <td class="table__cantidad">
              <h6 style="padding-top: 45px; padding-left: 25px;">{{quantity}}</h6>                   
            </td>
            <td class="table__cantidad">
              <form action="/api/carts/:cid/products/:pid?_method=DELETE" method="post">
              <input type="hidden" name="id" value="{{prods.[0].id}}">
              <button type="submit", value="delete" class="btn btn-danger delete">X</button>                 
              </form>
            </td>
          </tbody>         
          {{/each}}       
        </table>        
        <div class="row mx-4">
          <div class="col">           
            <h3 class="itemCartTotal text-white">Total: ${{total}}</h3>            
            <div class="col d-flex justify-content-end">
              <button class="btn btn-success" id="btncomprar">COMPRAR</button>
            </div>
          </div>
        </div>
      </div>       
    </div>


